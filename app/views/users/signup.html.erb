<%= form_tag(controller: "users",action: "signup", method: "post") do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %></br>
  <%= label_tag(:email, "Email_id:") %>
  <%= text_field_tag(:email) %></br>
  <%= label_tag(:password, "Password:") %>
  <%= text_field_tag(:password) %></br>
  <%= label_tag(:phone_no, "Phone No:") %>
  <%= text_field_tag(:phone_no) %></br>
  <%= submit_tag("Submit") %>
<% end %>